<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="oval" >
            <gradient
                android:angle="20"
                android:startColor="#7158E2"
                android:endColor="#CD84F1"
                android:type="linear" />
            <size android:width="20dp"
                android:height="20dp"/>
        </shape>
    </item>

    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="oval" >
            <solid android:color="#212121" />
        </shape>
    </item>

</layer-list>