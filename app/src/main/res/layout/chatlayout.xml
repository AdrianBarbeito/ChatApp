<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C2929"
    android:backgroundTint="#3A3333"
    android:backgroundTintMode="add"
    android:foregroundTint="#292424"
    android:foregroundTintMode="add">

    <ImageView
        android:id="@+id/converimg"
        android:layout_width="103dp"
        android:layout_height="82dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/person4" />

    <TextView
        android:id="@+id/convername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Robby Langford"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/converimg"
        app:layout_constraintTop_toTopOf="@+id/converimg" />

    <TextView
        android:id="@+id/convertext"
        android:layout_width="0dp"
        android:layout_height="29dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="140dp"
        android:text="Will do, super, thank you"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/convername" />
</androidx.constraintlayout.widget.ConstraintLayout>