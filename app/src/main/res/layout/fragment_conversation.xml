<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ConversationFragment">


    <ImageView
        android:id="@+id/converimg"
        android:layout_width="103dp"
        android:layout_height="82dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/person4" />

    <TextView
        android:id="@+id/convername"
        android:layout_width="148dp"
        android:layout_height="29dp"
        android:layout_marginStart="12dp"

        android:text="Robby Langford"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/converimg"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/converimg" />

    <TextView
        android:id="@+id/convertext"
        android:layout_width="203dp"
        android:layout_height="28dp"
        android:layout_marginTop="24dp"
        android:text="Will do, super, thank you"
        android:textColor="#B3B9C9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.114"
        app:layout_constraintStart_toEndOf="@+id/converimg"
        app:layout_constraintTop_toBottomOf="@+id/convername" />
</androidx.constraintlayout.widget.ConstraintLayout>