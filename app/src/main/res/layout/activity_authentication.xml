<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Activities.AuthenticationActivity">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/facebookBt"
        android:layout_width="390dp"
        android:layout_height="62dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimaryDark"
        android:drawableStart="@drawable/facebook"
        android:drawablePadding="5dp"
        android:text="@string/facebook"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.833"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/facebookBt" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/googleBt"
        android:layout_width="390dp"
        android:layout_height="62dp"
        android:layout_marginTop="108dp"
        android:background="@color/colorPrimaryDark"
        android:drawableStart="@drawable/google"
        android:drawablePadding="5dp"
        android:text="@string/facebook"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"


        app:layout_constraintTop_toBottomOf="@id/facebookBt" />

    <EditText
        android:id="@+id/userInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/googleBt"
        android:layout_marginTop="100dp"
        android:background="@drawable/border_text"
        android:backgroundTint="@color/white"
        android:drawableStart="@drawable/person_24"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="User"
        android:inputType="textPersonName"
        android:padding="15dp" />

    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/userInput"
        android:layout_marginTop="15dp"
        android:background="@drawable/border_text"
        android:backgroundTint="@color/white"
        android:drawableStart="@drawable/lock_24"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:padding="15dp" />

    <Button
        android:id="@+id/signInBt"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/passwordInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:backgroundTint="#7158E2"
        app:cornerRadius="50dp"
        android:text="@string/signIn"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/accountQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/signInBt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:text="@string/accountQuestion"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/switchToLoginBt"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/accountQuestion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"
        android:text="@string/login"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15dp" />




    <Button
        android:id="@+id/consultaBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Consulta provisional"/>

    <Button
        android:id="@+id/apiBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="API"/>

</androidx.constraintlayout.widget.ConstraintLayout>