<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Activities.AuthenticationActivity">

    <EditText
        android:id="@+id/userInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="250dp"
        android:background="@drawable/border_text"
        android:backgroundTint="@color/white"
        android:drawableStart="@drawable/person_24"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="User"
        android:inputType="textPersonName"
        android:padding="15dp" />

    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/userInput"
        android:layout_marginTop="15dp"
        android:background="@drawable/border_text"
        android:backgroundTint="@color/white"
        android:drawableStart="@drawable/lock_24"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="ContraseÃ±a"
        android:inputType="textPassword"
        android:padding="15dp" />

    <Button
        android:id="@+id/signInBt"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/passwordInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:backgroundTint="#7158E2"
        app:cornerRadius="50dp"
        android:text="@string/signIn"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/accountQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/signInBt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:text="@string/accountQuestion"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/switchToLoginBt"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/accountQuestion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"
        android:text="Login"

        android:textSize="15dp" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/faceButton"
        android:layout_width="390dp"
        android:layout_height="62dp"
        android:drawableStart="@drawable/face"
        android:drawablePadding="5dp"
        android:text="@string/facebook"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="56dp" />

    <Button
        android:id="@+id/googleButton"
        android:layout_width="390dp"
        android:layout_height="62dp"
        android:layout_marginTop="16dp"
        android:text="@string/google"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/faceButton" />

</androidx.constraintlayout.widget.ConstraintLayout>